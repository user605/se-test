diff --git a/roller_pub/app/src/main/java/org/apache/roller/weblogger/business/jpa/JPACategoryManagerImpl.java b/roller_pub/app/src/main/java/org/apache/roller/weblogger/business/jpa/JPACategoryManagerImpl.java
